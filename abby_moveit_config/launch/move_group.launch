<launch>

  <include file="$(find abby_moveit_config)/launch/planning_context.launch" />

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg unless="$(arg debug)" name="command_args" value="" />
  <arg     if="$(arg debug)" name="command_args" value="--debug" />

  <arg name="allow_trajectory_execution" default="true"/>
  <arg name="max_safe_path_cost" default="1"/>

  <include ns="move_group" file="$(find abby_moveit_config)/launch/planning_pipeline.launch">
    <arg name="pipeline" value="ompl" />
  </include>

  <include ns="move_group" file="$(find abby_moveit_config)/launch/trajectory_execution.launch">
    <arg name="moveit_controller_manager" value="abby" /> 
    <arg name="moveit_manage_controllers" value="true" />
  </include>

  <include ns="move_group" file="$(find abby_moveit_config)/launch/sensor_manager.launch">
    <arg name="moveit_sensor_manager" value="abby" /> 
  </include>

  <node name="move_group" launch-prefix="$(arg launch_prefix)" pkg="move_group" type="move_group_action_server" respawn="false" output="screen" args="$(arg command_args)">
    <param name="allow_trajectory_execution" value="$(arg allow_trajectory_execution)"/>
    <param name="max_safe_path_cost" value="$(arg max_safe_path_cost)"/>
  </node>
  
</launch>
