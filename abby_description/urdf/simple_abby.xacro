<?xml version="1.0" ?>
<robot name="abby" xmlns:xacro="http://ros.org/wiki/xacro">
    <link name="base_link" />
    <joint name="base_frame_joint" type="fixed" >
        <parent link="base_link" />
        <child link="frame_link" />
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi}"/>
    </joint>

    <link name="frame_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://abby_description/meshes/abby_base.dae" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.07 0.0 0.52" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.62 0.55 0.5" />
            </geometry>
        </collision>
        <collision>
            <origin xyz="0.17 0.0 0.18" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.38 0.25 0.15" />
            </geometry>
        </collision>
        <collision>
            <origin xyz="-0.21 0.0 1.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.2 1.3" />
            </geometry>
        </collision>
    </link>

    <xacro:macro name="wheels" params="side reflect">
        <joint name="frame_${side}_wheel_joint" type="continuous">
            <parent link="frame_link" />
            <origin xyz="0.183538 ${0.281685 * reflect} 0.170748" rpy="0.0 0.0 0.0" />
            <axis xyz="0.0 -1.0 0.0"/>
            <child link="${side}_wheel_link" />
            <limit effort="10000" velocity="10000" />
        </joint>

        <link name="${side}_wheel_link">
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <mesh filename="package://abby_description/meshes/wheel.dae" />
                </geometry>                
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <sphere radius="0.16862" />
                </geometry>
            </collision>
        </link>

        <joint name="frame_${side}_caster_joint" type="continuous">
            <parent link="frame_link" />
            <child link="${side}_caster_link" />
            <origin xyz="-0.294566 ${0.210123 * reflect} 0.264089" rpy="0.0 0.0 0.0" />
            <limit effort="10000" velocity="10000" />
            <axis xyz="0.0 0.0 1.0" />
        </joint>
        
        <link name="${side}_caster_link">
            <visual>
                <origin xyz="0.294566 -0.210123 -0.264089" rpy="0.0 0.0 0.0" />
                <geometry>
                    <mesh filename="package://abby_description/meshes/caster.dae" />
                </geometry>                
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0" />
                <geometry>
                    <cylinder length="0.1" radius="0.025" />
                </geometry>
            </collision>
            <collision>
                <origin xyz="0.03 0.0 -0.095" rpy="0.0 ${-pi/7} 0.0"/>
                <geometry>
                    <box size="0.05 0.075 0.17" />
                </geometry>
            </collision>
        </link>

        <joint name="${side}_caster_${side}_caster_wheel_joint" type="continuous">
            <parent link="${side}_caster_link" />
            <child link="${side}_caster_wheel_link" />
            <origin xyz="0.05715 0.0 -0.161924" rpy="0.0 0.0 0.0" />
            <limit effort="10000" velocity="10000" />
            <axis xyz="0.0 1.0 0.0" />
        </joint>
        
        <link name="${side}_caster_wheel_link">
            <visual>
                <origin xyz="0.05715 0.0 0.161924" rpy="0.0 0.0 ${pi/2}" />
                <geometry>
                    <mesh filename="package://abby_description/meshes/caster_wheel.dae" />
                </geometry>                
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <geometry>
                    <sphere radius="0.09523" />
                </geometry>
            </collision>
        </link>

    </xacro:macro>


    <xacro:wheels side="r" reflect="1" />
    <xacro:wheels side="l" reflect="-1" />

</robot>